{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // --- ESTA ES LA L√çNEA QUE ARREGLA EL ERROR ---
    "jsx": "react-native",
    // ------------------------------------------

    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}
